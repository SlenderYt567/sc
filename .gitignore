local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "Shop Bypass Hub",
   Icon = 0,
   LoadingTitle = "Injecting Exploits...",
   LoadingSubtitle = "By BloxMinds",
   Theme = "Default",
   ConfigurationSaving = {
      Enabled = true,
      FileName = "ShopBypassConfig"
   },
   KeySystem = false
})

-- // SERVICES // --
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local Workspace = game:GetService("Workspace")

-- // VARIABLES // --
local LocalPlayer = Players.LocalPlayer
local Paper = nil
local Success, Err = pcall(function()
    Paper = require(ReplicatedStorage:WaitForChild("Paper"))
end)

-- // TABS // --
local MainTab = Window:CreateTab("Shop Exploits", "shopping-cart")
local PlayerTab = Window:CreateTab("Player", "user")

-- // NOTIFICATIONS // --
local function Notify(title, content)
    Rayfield:Notify({
        Title = title,
        Content = content,
        Duration = 5,
        Image = "info"
    })
end

if not Success then
    Notify("Error", "Could not find 'Paper' module. Game might have updated.")
else
    Notify("Success", "Game Logic Found. Exploits Ready.")
end

-- // BYPASS LOGIC // --
local SpoofedStats = {
    -- Pickaxes
    "Dark Surge", "Frostbite Reaper", "Mining Drill",
    -- Miners
    "Robux Man", "Dominus Man", "Mine King",
    -- Gamepasses/Upgrades
    "Pulse", "LuckyEggs", "SuperLuckyEggs", "UltraLuckyEggs",
    "Double Crowns", "AutoHatch", "MagicEggs", "TripleHatch",
    "VIP", "Teleport"
}

local HookEnabled = false
local OriginalGet = nil

if Paper and Paper.Stats then
    OriginalGet = Paper.Stats.Get
end

local function ToggleBypass(state)
    HookEnabled = state
    if not Paper or not OriginalGet then return end

    if state then
        -- Overwrite the Get function
        Paper.Stats.Get = function(...)
            local args = {...}
            -- Usually args: (Player, StatName) or just (StatName)
            local statName = args[2] or args[1]
            
            if table.find(SpoofedStats, statName) then
                -- Create a fake ValueObject that mimics a real one
                local FakeValue = Instance.new("BoolValue")
                FakeValue.Value = true
                return FakeValue
            end
            
            return OriginalGet(...)
        end
        
        -- Force UI Update
        local UI = require(ReplicatedStorage.Modules.Client.UI)
        if UI and UI.Shop then
            UI.Shop.UpdateShop(LocalPlayer)
        end
    else
        -- Restore original function
        Paper.Stats.Get = OriginalGet
        
        -- Force UI Update
        local UI = require(ReplicatedStorage.Modules.Client.UI)
        if UI and UI.Shop then
            UI.Shop.UpdateShop(LocalPlayer)
        end
    end
end

-- // MAIN TAB // --

MainTab:CreateSection("Shop Bypasses (Client)")

MainTab:CreateToggle({
   Name = "Unlock All Gamepasses (Visual/Client)",
   CurrentValue = false,
   Flag = "UnlockPasses",
   Callback = function(Value)
       ToggleBypass(Value)
       if Value then
           Notify("Bypass Active", "Shop items should now appear 'Owned'. Try equipping them.")
       end
   end,
})

MainTab:CreateButton({
   Name = "Remove 'Buy' Boards (FPS Boost)",
   Callback = function()
       local Stands = Workspace:FindFirstChild("ExclusiveStands")
       local Passes = Workspace:FindFirstChild("Passes")
       local EggBoard = Workspace:FindFirstChild("EggBoard")
       
       if Stands then Stands:Destroy() end
       if Passes then Passes:Destroy() end
       if EggBoard then EggBoard:Destroy() end
       
       Notify("Cleaned", "Removed purchase boards from workspace.")
   end,
})

MainTab:CreateSection("Automation")

local AutoClick = false
MainTab:CreateToggle({
   Name = "Auto Click (Universal)",
   CurrentValue = false,
   Flag = "AutoClick",
   Callback = function(Value)
       AutoClick = Value
       task.spawn(function()
           while AutoClick do
               -- Try to find a click tool or remote
               local Tool = LocalPlayer.Character and LocalPlayer.Character:FindFirstChildOfClass("Tool")
               if Tool then
                   Tool:Activate()
               end
               task.wait(0.1)
           end
       end)
   end,
})

