-- Use esta fun√ß√£o no futuro para bloquear bot√µes
local function CheckPremium()
    if UserTier == "Premium" then
        return true
    else
        Rayfield:Notify({
            Title = "Premium Required",
            Content = "Esta fun√ß√£o √© exclusiva para usu√°rios Premium (7/30 Dias).",
            Duration = 5,
