TabEggs:Dropdown("Select Egg", GameData.Tables.Eggs, "Basic Egg", "EggSelect", "Choose egg to hatch", function(val)
    getgenv().Flags.Egg = val
end)

TabEggs:Dropdown("Hatch Amount", {"1", "3", "Max"}, "1", "HatchMode", "Amount per hatch", function(val)
    getgenv().Flags.HatchMode = val
end)

TabEggs:Toggle(IsPremium and "FLASH HATCH (No Delay)" or "Auto Hatch", false, "AutoHatch", "Hatches eggs", function(v)
    if v then
        StartTask("Hatch", function()
            while true do
                local mode = getgenv().Flags.HatchMode
                local amt = (mode == "Max" and "Max" or tonumber(mode))
                NetworkCall("Invoke", "Hatch Egg", getgenv().Flags.Egg, amt)
                task.wait(IsPremium and 0.05 or 0.6)
            end
        end)
    else StopTask("Hatch") end
end)

-- ==== TAB: FARM/PETS ==== --
local TabFP = Window:Tab("Farm")

TabFP:Toggle("Auto Plant/Harvest/Upgrade", false, "AutoFarm", "Manages farm completely", function(v)
    if v then StartTask("Farm", function() while true do FarmLogic() task.wait(IsPremium and 1 or 3) end end)
    else StopTask("Farm") end
end)

TabFP:Toggle("Auto Craft All (Gold/Rainbow)", false, "AutoCraft", "Crafts pets automatically", function(v)
    if v then
        StartTask("Craft", function()
            while true do
                BulkCraft(1) -- Gold
                task.wait(0.2)
                BulkCraft(2) -- Rainbow
                task.wait(2)
            end
        end)
    else StopTask("Craft") end
end)

-- ==== TAB: UPGRADES ==== --
